{
  "name": "@allfeat/sdk",
  "version": "1.0.0",
  "description": "sdk for interacting with the allfeat blockchain",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "generate-chaintypes-from-devnet": "dedot chaintypes -w ws://127.0.0.1:9944 -o ./src/interfaces/ -c allfeat",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allfeat/sdk-js.git"
  },
  "devdependencies": {
    "@dedot/chaintypes": "^0.48.0",
    "@types/bun": "^1.1.16",
    "@types/jest": "^29.5.14",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "peerdependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@polkadot/keyring": "^13.3.1",
    "@polkadot/types-codec": "^15.2.1",
    "@polkadot/util-crypto": "^13.3.1",
    "dedot": "^0.6.1"
  },
  "devDependencies": {
    "tsup": "^8.3.5"
  }
}